<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/no_connection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/label_connection"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/no_connection_icon" />

        <TextView
            android:id="@+id/label_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Connection Failed!"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_connection"
            android:layout_centerInParent="true"
            android:gravity="start"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="1. Make sure you have connected to an network"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_1"
            android:layout_centerInParent="true"
            android:gravity="start"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="2. Try To change your connection."
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_2"
            android:layout_centerInParent="true"
            android:gravity="start"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="3. Try to reconnect or restart your connection."
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_3"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_view_wtih_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="Retry Now"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
