<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="360"
                android:endColor="@color/action_bar_light"
                android:centerColor="@color/action_bar_medium"
                android:startColor="@color/action_bar_dark"
                android:type="linear" />

            <stroke
                android:width="2dp"
                android:color="#ffffff" />

            <corners android:radius="5dp"/>

        </shape>
    </item>

    <item>
        <shape>

            <corners android:radius="5dp"/>

            <gradient
                android:angle="360"
                android:endColor="@color/action_bar_light"
                android:centerColor="@color/action_bar_medium"
                android:startColor="@color/action_bar_dark"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#80ffffff" />

        </shape>
    </item>
</selector>